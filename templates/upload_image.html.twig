{% extends 'base.html.twig' %}

{% block body %}
    <h1>Upload Image</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.file) }}
        {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.file) }}
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
    {{ form_end(form) }}
{% endblock %}
