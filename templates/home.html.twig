<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    {% endblock %}

</head>
<body>

{# Utilisateur connecté #}

{% if app.user is not null %}

    <div class="header">
        <img src="{{ asset('/assets/picture/Logo YouFilm Blanx.png') }}" alt="Logo YouFilm" class="logo">

        <div class="button">
            <a href="{{ path('app_user_logout') }}">
                <button class="btn btn-light">Déconnexion</button>
            </a>
        </div>
    </div>

    <div class="card-movie">
        {% for movie in movies %}

            <a href="{{ path('movie_show', { 'id': movie.id }) }} " class="text-decoration-none movie_list">
                <div class="m-3 me-2 ms-2">
                    <img src="/images/{{ movie.thumbnail }}" class="card-img-top movie_thumbnail" alt="miniature film">
                </div>
            </a>

        {% endfor %}d
    </div>

    <div class="category">
        <h2> Catégories : </h2>
    </div>

    <div class="d-flex align-items-center overflow-auto oui">
        <div class="card-group flex-nowrap">
            {% for categorie in category %}
                <a href="{{ path('app_category', { 'name': categorie.name }) }}">
                    <div class="card d-flex justify-content-center align-items-center m-4"
                         style="width: 18rem; height: 10rem;">
                        <h2>{{ categorie.name }}</h2>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>


{% else %} {# Utilisateur non-connecté #}

    <div class="header">
        <img src="{{ asset('/assets/picture/Logo YouFilm Blanx.png') }}" alt="Logo YouFilm" class="logo">

        <div class="button">
            <a href="{{ path('app_user_login') }}">
                <button class="btn btn-light">Connexion</button>
            </a>
            <a href="{{ path('app_user_register') }}">
                <button class="btn btn-light">Inscription</button>
            </a>
        </div>
    </div>

    <div class="card-movie">
        {% for movie in movies %}

            <a href="{{ path('movie_show', { 'id': movie.id }) }} " class="text-decoration-none movie_list">
                <div class="m-3 me-2 ms-2">
                    <img src="/images/{{ movie.thumbnail }}" class="card-img-top movie_thumbnail" alt="miniature film">
                </div>
            </a>

        {% endfor %}
    </div>

    <div class="category">
        <h2> Catégories : </h2>
    </div>

    <div class="d-flex align-items-center overflow-auto oui">
        <div class="card-group flex-nowrap">
            {% for categorie in category %}
                <a href="{{ path('app_category', { 'name': categorie.name }) }}">
                    <div class="card d-flex justify-content-center align-items-center m-4"
                         style="width: 18rem; height: 10rem;">
                        <h2>{{ categorie.name }}</h2>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>

{% endif %}

</body>
</html>