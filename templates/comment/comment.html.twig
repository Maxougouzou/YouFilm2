{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}"> {% endblock %}

{% block body %}

<h2>Ajouter un commentaire : </h2>
        {{ form_start(form) }}
        {{ form_label(form.content, 'Content') }}
        {{ form_widget(form.content, {'attr': {'class': ''}}) }}
        {{ form_errors(form.content) }}
        <div class="button-create-comment">
        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        <a href="{#{{ path('movie_show', {'id': 'comment.movie.id'}) }}#}" class="btn btn-secondary" >Cancel</a>
        </div>
        {{ form_end(form) }}


{% endblock %}